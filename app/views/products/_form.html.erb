<h1>Create a product<h1>
<%= form_with model: @my_product do |form| %>

<div>
  <%= form.label :title %></br>
  <%= form.text_field :title, placeholder: "Enter a title" %>

</div>

<div>
  <%= form.label :description %></br>
  <%= form.text_area :description , placeholder: "Enter a product description" %>
</div>

<div>
  <%= form.label :price %><br/>
  <%= form.number_field :price %>
</div>

<div>
  <%= form.submit %>
</div>

<% end %>